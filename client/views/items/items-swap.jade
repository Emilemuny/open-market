h1 Pending swaps

.container(ng-repeat='item in pending')
      .row
        .col-xs-12.col-sm-6.col-md-6.col-lg-6(ng-repeat='swap in item.pending')
          .box
            .box-icon
              img(src='{{swap.image}}', width='80', height='70') 
            .box-icon
              img.itemimg(src='{{item.image}}', width='80', height='70')     
  
            .info
              h4.text-center {{swap.name}}
              li  This item is valued $ {{swap.price}}. 
              li  Category: {{swap.category}} 
              
              a.btn(ng-click='acceptSwap(item._id, swap._id)') Swap
        
            
