h1 Pending swaps

.page-header(ng-repeat='item in pending') 
  img(src='{{item.image}}', width='80', height='70')
  h2 {{item.name}}
  table.table.table-hover
    tbody
      tr(ng-repeat='swap in item.pending')
        td
          img(src='{{swap.image}}', width='80', height='70')
        td: a(ui-sref='items.show({itemId:swap._id})') {{swap.name}}Â 
        td {{swap.price}}
        td {{swap.category}}
        td {{swap.status}}  
        td: a.btn.btn-success(ng-click='acceptSwap(item._id, swap._id)') Swap
